{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest":true
    },
    "extends":  [
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "ecmaFeatures":  {
        "jsx":  true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions":  {
        "ecmaVersion":  2018,
        "sourceType":  "module"
        },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4]
    },
    "settings":  {
        "react":  {
            "version":  "detect"
        }
    }
}